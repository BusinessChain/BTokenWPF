<Window x:Class="BTokenWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTokenWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
            
        
        <TextBox Name ="TextBoxStatus" HorizontalAlignment="Center" Grid.Column="0"
                 VerticalAlignment="Top" FontSize="10"/>

        <TextBox Name ="TextBoxLog" HorizontalAlignment="Center" Grid.Column="1"
                 VerticalAlignment="Top" FontSize="10" 
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.CanContentScroll="True"/>

        <Button Name ="ButtonClearTextBoxLog" HorizontalAlignment="Right" Grid.Column="1"
                VerticalAlignment="Bottom" Content="ClearLog" Click="ButtonClearTextBoxLog_Click"/>

        <Button Name ="ButtonStartBitcoinMiner" HorizontalAlignment="Left" Grid.Column="0"
                VerticalAlignment="Bottom" Content="Start BitcoinMiner" Click="ButtonBitcoinMiner_Click"/>
        
        <Button Name ="ButtonStartBTokenMiner" HorizontalAlignment="Right" Grid.Column="0"
                VerticalAlignment="Bottom" Content="Start BTokenMiner" Click="ButtonBTokenMiner_Click"/>

    </Grid>
</Window>
