<UserControl x:Class="BTokenWPF.ListBoxItemTX"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BTokenWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBox Name="TextBoxTXHash"/>
            <TextBox Name="TextBoxTXRaw"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBox Name="TextBoxCountInputs">Number of Inputs:</TextBox>
            <TextBox Name="TextBoxCountOutputs">Number of Outputs:</TextBox>
            <TextBox Name="TextBoxFee">Fee: </TextBox>
        </StackPanel>

    </Grid>
</UserControl>
