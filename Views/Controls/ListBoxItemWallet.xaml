<UserControl x:Class="BTokenWPF.ListBoxItemWallet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BTokenWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>

        <Label Name="LabelTXID" HorizontalAlignment="Left" Grid.Column="0"/>
        <Label Name="LabelIndex" HorizontalAlignment="Center" Grid.Column="1"/>
        <Label Name="LabelValue" HorizontalAlignment="Right" Grid.Column="2"/>
        <Label Name="LabelStatus" HorizontalAlignment="Right" Grid.Column="3"/>
    </Grid>
</UserControl>
