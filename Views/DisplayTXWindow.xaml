<Window x:Class="BTokenWPF.DisplayTXWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTokenWPF"
        mc:Ignorable="d"
        Title="DisplayTXWindow" Height="300" Width="700">

    <Grid HorizontalAlignment="Center" Margin="10" Width="650">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="TextBoxTXLabels" IsReadOnly="True" Grid.Column="0" FontWeight="Bold" TextAlignment="Right"/>
        <TextBox Name="TextBoxTXValues" IsReadOnly="True" Grid.Column="1" TextAlignment="Left"/>
    </Grid>

</Window>
