        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTokenWPF"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox Name="TextBoxToken" FontSize="20"/>

        <ListBox Name="ListBoxHeaderchain"  MouseDoubleClick="ListBoxHeaderchain_MouseDoubleClick" Grid.Column="1"/>
    </Grid>
</Window>
